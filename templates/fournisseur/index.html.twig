{% extends 'base.html.twig' %}

{% block title %}Liste des fournisseurs{% endblock %}

{% block body %}
<h1>Liste des fournisseurs</h1>
<a href="{{ path('fournisseur_new') }}" class="btn btn-primary mb-3">Ajouter un fournisseur</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Nb Produits</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for fournisseur in fournisseurs %}
        <tr>
            <td>{{ fournisseur.id }}</td>
            <td>{{ fournisseur.nom }}</td>
            <td>{{ fournisseur.email ?? '—' }}</td>
            <td>{{ fournisseur.telephone ?? '—' }}</td>
            <td>{{ fournisseur.products|length }}</td>
            <td>
                <a href="{{ path('fournisseur_show', {id: fournisseur.id}) }}" class="btn btn-info btn-sm">Voir produits</a>
                <a href="{{ path('fournisseur_edit', {id: fournisseur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                <form method="post" action="{{ path('fournisseur_delete', {id: fournisseur.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fournisseur.id) }}">
                    <button class="btn btn-danger btn-sm" onclick="return confirm('Supprimer ?')">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="6">Aucun fournisseur trouvé.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
