{% extends 'base.html.twig' %}

{% block title %}Nouveau produit â€” StockManager Pro{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1" style="color:var(--text-primary)">Nouveau produit</h4>
                <p class="mb-0" style="font-size:0.875rem;color:var(--text-muted)">Remplissez les informations du produit</p>
            </div>
            <a href="{{ path('product_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Retour
            </a>
        </div>

        <div class="form-card">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

            <div class="row g-3">
                <div class="col-md-8">
                    {{ form_row(form.libelle) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.price) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.stock) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.category) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.fournisseur) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.imageFile) }}
                </div>
            </div>

            <hr class="my-4">
            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('product_index') }}" class="btn btn-outline-secondary">Annuler</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i> Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
