{% extends 'base.html.twig' %}

{% block title %}Modifier {{ category.nom }} — StockManager Pro{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1" style="color:var(--text-primary)">Modifier la catégorie</h4>
                <p class="mb-0" style="font-size:0.875rem;color:var(--text-muted)">{{ category.nom }}</p>
            </div>
            <a href="{{ path('category_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Retour
            </a>
        </div>

        <div class="form-card">
            {% if category.image %}
            <div class="mb-4">
                <label class="form-label">Image actuelle</label>
                <div class="d-flex align-items-center gap-3">
                    <img src="{{ asset('uploads/' ~ category.image) }}" style="width:100px;height:100px;object-fit:cover;border-radius:14px;border:2px solid var(--border-color)" alt="{{ category.nom }}">
                </div>
            </div>
            {% endif %}

            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

            <div class="row g-3">
                <div class="col-12">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.imageFile) }}
                </div>
            </div>

            <hr class="my-4">
            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('category_index') }}" class="btn btn-outline-secondary">Annuler</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> Enregistrer</button>
            </div>

            {{ form_end(form) }}

            <hr class="my-3">
            <form method="post" action="{{ path('category_delete', {id: category.id}) }}" onsubmit="return confirm('Supprimer cette catégorie et tous ses produits ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button type="submit" class="btn btn-outline-danger w-100"><i class="bi bi-trash me-1"></i> Supprimer cette catégorie</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
