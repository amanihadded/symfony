{% extends 'base.html.twig' %}

{% block title %}{{ category.nom }} — StockManager Pro{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1" style="color:var(--text-primary)">{{ category.nom }}</h4>
        {% if category.description %}
            <p class="mb-0" style="font-size:0.875rem;color:var(--text-muted)">{{ category.description }}</p>
        {% endif %}
    </div>
    <div class="d-flex gap-2">
        <a href="{{ path('category_edit', {id: category.id}) }}" class="btn btn-primary"><i class="bi bi-pencil me-1"></i> Modifier</a>
        <a href="{{ path('category_index') }}" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i> Retour</a>
    </div>
</div>

{# Category Image #}
{% if category.image %}
<div class="mb-4">
    <img src="{{ asset('uploads/' ~ category.image) }}" class="rounded-3" style="max-height:200px;object-fit:cover" alt="{{ category.nom }}">
</div>
{% endif %}

{# Products Table #}
<div class="table-card">
    <div class="card-header">
        <h5><i class="bi bi-box me-2"></i>Produits de cette catégorie</h5>
        <span class="badge-purple">{{ category.products|length }}</span>
    </div>
    <div class="card-body p-0">
        {% if category.products|length > 0 %}
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in category.products %}
                <tr>
                    <td>
                        {% if product.image %}
                            <img src="{{ asset('uploads/' ~ product.image) }}" class="img-thumb" alt="{{ product.libelle }}">
                        {% else %}
                            <div class="img-placeholder"><i class="bi bi-image"></i></div>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('product_show', {id: product.id}) }}" class="fw-semibold text-decoration-none" style="color:var(--text-primary)">{{ product.libelle }}</a>
                    </td>
                    <td class="fw-semibold">{{ product.price|number_format(2, ',', ' ') }} DT</td>
                    <td>
                        {% if product.stock == 0 %}
                            <span class="badge-stock-out">Rupture</span>
                        {% elseif product.stock <= 5 %}
                            <span class="badge-stock-low">{{ product.stock }}</span>
                        {% else %}
                            <span class="badge-stock-ok">{{ product.stock }}</span>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-1">
                            <a href="{{ path('product_show', {id: product.id}) }}" class="btn-icon"><i class="bi bi-eye"></i></a>
                            <a href="{{ path('product_edit', {id: product.id}) }}" class="btn-icon btn-icon-warning"><i class="bi bi-pencil"></i></a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="text-center py-5" style="color:var(--text-muted)">
            <i class="bi bi-inbox" style="font-size:2rem"></i>
            <p class="mt-2 mb-0">Aucun produit dans cette catégorie</p>
            <a href="{{ path('product_new') }}" class="btn btn-sm btn-primary mt-2">Ajouter un produit</a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
