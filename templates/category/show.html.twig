{% extends 'base.html.twig' %}

{% block title %}Catégorie : {{ category.nom }}{% endblock %}

{% block body %}
<h1>Catégorie : {{ category.nom }}</h1>

<h3>Produits de cette catégorie</h3>
{% if category.products|length > 0 %}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Libellé</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for product in category.products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.libelle }}</td>
            <td>{{ product.price }} €</td>
            <td>
                <a href="{{ path('product_show', {id: product.id}) }}" class="btn btn-sm btn-info">Voir</a>
                <a href="{{ path('product_edit', {id: product.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<p class="text-muted">Aucun produit dans cette catégorie.</p>
{% endif %}

<a href="{{ path('category_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
