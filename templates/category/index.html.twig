{% extends 'base.html.twig' %}

{% block title %}Catégories — StockManager Pro{% endblock %}

{% block body %}
{# ─── Page Header ─── #}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1" style="color:var(--text-primary)">Catégories</h4>
        <p class="mb-0" style="font-size:0.875rem;color:var(--text-muted)">{{ totalCategories }} catégorie{{ totalCategories > 1 ? 's' : '' }} au total</p>
    </div>
    <a href="{{ path('category_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> Nouvelle catégorie
    </a>
</div>

{# ─── Search Bar ─── #}
<div class="table-card mb-4">
    <div class="card-body" style="padding:1rem 1.5rem">
        <form method="get" action="{{ path('category_index') }}" data-turbo="false">
            <div class="row g-3 align-items-end">
                <div class="col-md-8">
                    <div class="position-relative">
                        <i class="bi bi-search position-absolute" style="left:0.75rem;top:50%;transform:translateY(-50%);color:var(--text-muted);font-size:0.85rem"></i>
                        <input type="text" name="search" class="form-control" style="padding-left:2.2rem" placeholder="Rechercher une catégorie..." value="{{ search }}">
                    </div>
                </div>
                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1"><i class="bi bi-funnel me-1"></i>Filtrer</button>
                    <a href="{{ path('category_index') }}" class="btn btn-outline-secondary"><i class="bi bi-x-lg"></i></a>
                </div>
            </div>
        </form>
    </div>
</div>

{# ─── Categories Grid ─── #}
<div class="row g-4">
    {% for category in categories %}
    <div class="col-md-6 col-lg-4">
        <div class="card stat-card h-100">
            {% if category.image %}
                <img src="{{ asset('uploads/' ~ category.image) }}" class="card-img-top" style="height:160px;object-fit:cover;border-radius:16px 16px 0 0" alt="{{ category.nom }}">
            {% else %}
                <div class="d-flex align-items-center justify-content-center" style="height:160px;background:var(--bg-body);border-radius:16px 16px 0 0">
                    <i class="bi bi-tags" style="font-size:2.5rem;color:var(--text-muted)"></i>
                </div>
            {% endif %}
            <div class="card-body">
                <h5 class="fw-bold mb-2" style="color:var(--text-primary)">{{ category.nom }}</h5>
                {% if category.description %}
                    <p class="mb-3" style="font-size:0.85rem;color:var(--text-secondary)">{{ category.description|u.truncate(80) }}</p>
                {% endif %}
                <div class="d-flex align-items-center gap-2 mb-3">
                    <span class="badge-purple">
                        <i class="bi bi-box me-1"></i>{{ category.products|length }} produit{{ category.products|length > 1 ? 's' : '' }}
                    </span>
                </div>
                <div class="d-flex gap-2">
                    <a href="{{ path('category_show', {id: category.id}) }}" class="btn btn-sm btn-outline-primary flex-grow-1">
                        <i class="bi bi-eye me-1"></i> Voir
                    </a>
                    <a href="{{ path('category_edit', {id: category.id}) }}" class="btn-icon btn-icon-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post" action="{{ path('category_delete', {id: category.id}) }}" onsubmit="return confirm('Supprimer cette catégorie ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button class="btn-icon btn-icon-danger"><i class="bi bi-trash"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-12">
        <div class="text-center py-5" style="color:var(--text-muted)">
            <i class="bi bi-tags" style="font-size:2.5rem"></i>
            <p class="mt-2 mb-0">Aucune catégorie trouvée</p>
            <a href="{{ path('category_new') }}" class="btn btn-sm btn-primary mt-3">Créer une catégorie</a>
        </div>
    </div>
    {% endfor %}
</div>

{# ─── Pagination ─── #}
{% if totalPages > 1 %}
<div class="d-flex justify-content-center mt-4">
    <nav>
        <ul class="pagination pagination-sm mb-0">
            <li class="page-item {{ currentPage <= 1 ? 'disabled' }}">
                <a class="page-link" href="{{ path('category_index', {page: currentPage - 1, search: search}) }}"><i class="bi bi-chevron-left"></i></a>
            </li>
            {% for i in 1..totalPages %}
                <li class="page-item {{ i == currentPage ? 'active' }}">
                    <a class="page-link" href="{{ path('category_index', {page: i, search: search}) }}">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="page-item {{ currentPage >= totalPages ? 'disabled' }}">
                <a class="page-link" href="{{ path('category_index', {page: currentPage + 1, search: search}) }}"><i class="bi bi-chevron-right"></i></a>
            </li>
        </ul>
    </nav>
</div>
{% endif %}
{% endblock %}
